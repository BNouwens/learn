{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "VPC",
  "Parameters": {
    "Name": {
      "Type": "String",
      "Default": "Customer Environment",
      "Description": "Specify the customer name and environment, e.g. Datacom Production"
    },
    "VPCCidrBlock": {
      "Type": "String"
    },
    "ControlledASubnetCidrBlock": {
      "Type": "String"
    },
    "ControlledBSubnetCidrBlock": {
      "Type": "String"
    }
  },
  "Resources": {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Ref": "VPCCidrBlock"
        },
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "Name"
                  },
                  "VPC"
                ]
              ]
            }
          }
        ]
      }
    },
    "ControlledASubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Ref": "ControlledASubnetCidrBlock"
        },
        "AvailabilityZone": "ap-southeast-2a",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "Name"
                  },
                  "Controlled A Subnet"
                ]
              ]
            }
          }
        ]
      }
    },
    "ControlledBSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": {
          "Ref": "ControlledBSubnetCidrBlock"
        },
        "AvailabilityZone": "ap-southeast-2b",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "Name"
                  },
                  "Controlled B Subnet"
                ]
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "VPC": {
      "Description": "VPC Logical ID",
      "Value": {
        "Ref": "VPC"
      },
      "Export": {
        "Name": "VPC"
      }
    },
    "VPCCidrBlock": {
      "Description": "VPC CIDR",
      "Value": {
        "Fn::GetAtt": [
          "VPC",
          "CidrBlock"
        ]
      },
      "Export": {
        "Name": "VPCCidrBlock"
      }
    }
  }
}
